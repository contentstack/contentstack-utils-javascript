{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],

    "collectCoverage": true,
    "coverageReporters": [
      "json", 
      "html",
      "json-summary", 
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
  "reporters": [
    "default",
    ["jest-html-reporters", 
      {
        "publicPath": "./testcase-report",
        "filename": "index.html",
        "expand": true
      }
    ]
  ]
}